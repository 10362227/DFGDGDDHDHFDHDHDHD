wget https://nodejs.org/dist/v10.23.2/node-v10.23.2-linux-x64.tar.xz
tar xvJf node-v10.23.2-linux-x64.tar.xz
ln -s /root/node-v10.23.2-linux-x64/bin/node /usr/local/bin/node
ln -s /root/node-v10.23.2-linux-x64/bin/npm /usr/local/bin/npm
npm install
npm install pm2 -g
ln -s /root/node-v10.23.2-linux-x64/lib/node_modules/pm2/bin/pm2 /usr/local/bin/
mv /usr/local/bin/pm2 /tmp/
yum install git
